# ntfy configuration
NTFY_SERVER=https://ntfy.sh
NTFY_TOPIC=media-processing
# Token-based authentication (preferred method)
NTFY_TOKEN=tk_your_ntfy_token
# Legacy username/password authentication (only use if token auth is not available)
NTFY_USER=
NTFY_PASS=

# Topic splitting configuration
NTFY_USE_SEPARATE_TOPICS=False
# If above is True, these topics will be used based on media type
NTFY_TV_TOPIC=media-tv
NTFY_MOVIE_TOPIC=media-movies
NTFY_MUSIC_TOPIC=media-music

# API keys for services
SONARR_API_KEY=your_sonarr_api_key
RADARR_API_KEY=your_radarr_api_key
LIDARR_API_KEY=your_lidarr_api_key
PROWLARR_API_KEY=your_prowlarr_api_key
TDARR_API_KEY=your_tdarr_api_key
PLEX_TOKEN=your_plex_token

# Service URLs
SONARR_URL=http://localhost:8989
RADARR_URL=http://localhost:7878
LIDARR_URL=http://localhost:8686
PROWLARR_URL=http://localhost:9696
TDARR_URL=http://localhost:8265
PLEX_URL=http://localhost:32400
TAPEARR_URL=http://localhost:9999

# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=data/media_notification.log
ENABLE_FILE_LOGGING=True

# Enable/disable optional services
ENABLE_TDARR=False
ENABLE_TAPEARR=False

# Database settings
DATABASE_URL=sqlite:///./media_tracker.db

# Server settings
HOST=0.0.0.0
PORT=8000
